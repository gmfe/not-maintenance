{
  "compilerOptions": {
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "rootDir": "./",
    "strict": true,
    "jsx": "react",
    "target": "es6",
    "sourceMap": true,
    "module": "es2015",
    "allowJs": true,
    "outDir": "./lib",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots" : [
      "node_modules/@types/",
      "./typings/index.d.ts",
      "./js/types/*.d.ts"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "es",
    "lib"
  ]
}